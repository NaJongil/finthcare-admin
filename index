    <script>
        // Airtable Configuration (í…Œì´ë¸” IDë§Œ - API KeyëŠ” ì„œë²„ì—ì„œ ê´€ë¦¬)
        const AIRTABLE_CONFIG = {
            tables: {
                specialist: 'tbluvWoEC5PkPjgAp',
                checkup: 'tbl8FqfXZIRnMi13s',
                orgList: 'tblkdRKmvjRjvAfzz'
            }
        };

        // Status filters
        const SPECIALIST_STATUS_FILTER = ['ì§„í–‰ì¤‘', 'ì˜ˆì•½ì™„ë£Œ', 'ì§„ë£Œì™„ë£Œ', 'ë¹„ì˜ˆì•½ ì™„ë£Œ'];
        const CHECKUP_STATUS_FILTER = ['ì§„í–‰ì¤‘', 'ì˜ˆì•½ì™„ë£Œ', 'ê²€ì§„ì™„ë£Œ'];

        // Global state
        let currentOrg = null;

        // Airtable API helper (Vercel API Route í†µí•´ í˜¸ì¶œ)
        async function airtableFetch(tableId, params = {}) {
            const url = new URL('/api/airtable', window.location.origin);
            url.searchParams.append('action', 'fetch');
            url.searchParams.append('tableId', tableId);
            
            if (params.filterByFormula) {
                url.searchParams.append('filterByFormula', params.filterByFormula);
            }
            if (params.offset) {
                url.searchParams.append('offset', params.offset);
            }

            const response = await fetch(url);

            if (!response.ok) {
                throw new Error(`API error: ${response.status}`);
            }

            return response.json();
        }

        // Fetch all records with pagination
        async function fetchAllRecords(tableId, filterFormula = '') {
            let allRecords = [];
            let offset = null;

            do {
                const params = {};
                if (filterFormula) params.filterByFormula = filterFormula;
                if (offset) params.offset = offset;

                const data = await airtableFetch(tableId, params);
                allRecords = allRecords.concat(data.records);
                offset = data.offset;
            } while (offset);

            return allRecords;
        }

        // Login handler
        async function handleLogin() {
            const accessCode = document.getElementById('accessCode').value.trim();
            const loginBtn = document.getElementById('loginBtn');
            const loginError = document.getElementById('loginError');

            if (!accessCode) {
                loginError.textContent = 'ì ‘ì† ì½”ë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.';
                loginError.style.display = 'block';
                return;
            }

            loginBtn.disabled = true;
            loginBtn.textContent = 'í™•ì¸ ì¤‘...';
            loginError.style.display = 'none';

            try {
                const filterFormula = `{AccessCode} = '${accessCode}'`;
                const data = await airtableFetch(AIRTABLE_CONFIG.tables.orgList, { filterByFormula: filterFormula });

                if (data.records && data.records.length > 0) {
                    currentOrg = data.records[0].fields;
                    sessionStorage.setItem('orgData', JSON.stringify(currentOrg));
                    showDashboard();
                } else {
                    loginError.textContent = 'ì ‘ì† ì½”ë“œê°€ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤.';
                    loginError.style.display = 'block';
                }
            } catch (error) {
                console.error('Login error:', error);
                loginError.textContent = 'ì„œë²„ ì—°ê²°ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤. ì ì‹œ í›„ ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.';
                loginError.style.display = 'block';
            } finally {
                loginBtn.disabled = false;
                loginBtn.textContent = 'ì ‘ì†í•˜ê¸°';
            }
        }

        // Logout handler
        function handleLogout() {
            sessionStorage.removeItem('orgData');
            currentOrg = null;
            document.getElementById('loginScreen').style.display = 'flex';
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('accessCode').value = '';
        }

        // Show dashboard
        async function showDashboard() {
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('dashboard').style.display = 'block';

            // Display org info
            document.getElementById('orgNameDisplay').textContent = currentOrg.OrgName || 'ê¸°ì—…ëª…';

            // Display plan info
            displayPlanInfo();

            // Load data
            await loadDashboardData();
        }

        // Display plan information
        function displayPlanInfo() {
            const planName = currentOrg.PricePlan || '-';
            const startDate = currentOrg.PaidPlanStartDate;
            const endDate = currentOrg.PaidPlanEndDate;

            document.getElementById('planName').textContent = planName;

            if (startDate && endDate) {
                const start = new Date(startDate);
                const end = new Date(endDate);
                const today = new Date();
                
                const formatDate = (date) => {
                    return `${date.getFullYear()}.${String(date.getMonth() + 1).padStart(2, '0')}.${String(date.getDate()).padStart(2, '0')}`;
                };

                document.getElementById('planPeriod').textContent = `${formatDate(start)} ~ ${formatDate(end)}`;

                const daysLeft = Math.ceil((end - today) / (1000 * 60 * 60 * 24));
                document.getElementById('planDaysLeft').textContent = daysLeft > 0 ? daysLeft : 0;
            } else {
                document.getElementById('planPeriod').textContent = '-';
                document.getElementById('planDaysLeft').textContent = '-';
            }
        }

        // Load dashboard data
        async function loadDashboardData() {
            const orgName = currentOrg.OrgName;

            try {
                // Build filter formulas
                const specialistStatusFilter = SPECIALIST_STATUS_FILTER.map(s => `{Status} = '${s}'`).join(', ');
                const specialistFormula = `AND({OrgName} = '${orgName}', OR(${specialistStatusFilter}))`;

                const checkupStatusFilter = CHECKUP_STATUS_FILTER.map(s => `{Status} = '${s}'`).join(', ');
                const checkupFormula = `AND({OrgName} = '${orgName}', OR(${checkupStatusFilter}))`;

                // Fetch data
                const [specialistRecords, checkupRecords] = await Promise.all([
                    fetchAllRecords(AIRTABLE_CONFIG.tables.specialist, specialistFormula),
                    fetchAllRecords(AIRTABLE_CONFIG.tables.checkup, checkupFormula)
                ]);

                // Update stats
                updateStats(specialistRecords, checkupRecords);

                // Render tables
                renderSpecialistTable(specialistRecords);
                renderCheckupTable(checkupRecords);

            } catch (error) {
                console.error('Error loading data:', error);
            }
        }

        // Update statistics
        function updateStats(specialistRecords, checkupRecords) {
            // Total counts
            document.getElementById('specialistCount').textContent = specialistRecords.length;
            document.getElementById('checkupCount').textContent = checkupRecords.length;

            // Total savings
            const totalSavings = checkupRecords.reduce((sum, record) => {
                return sum + (record.fields.Savings || 0);
            }, 0);
            document.getElementById('totalSavings').innerHTML = formatNumber(totalSavings) + '<span class="stat-unit">ì›</span>';

            // Status counts (combined)
            const allRecords = [...specialistRecords, ...checkupRecords];
            
            const progressCount = allRecords.filter(r => r.fields.Status === 'ì§„í–‰ì¤‘').length;
            const bookedCount = allRecords.filter(r => r.fields.Status === 'ì˜ˆì•½ì™„ë£Œ').length;
            const doneCount = allRecords.filter(r => 
                ['ì§„ë£Œì™„ë£Œ', 'ë¹„ì˜ˆì•½ ì™„ë£Œ', 'ê²€ì§„ì™„ë£Œ'].includes(r.fields.Status)
            ).length;

            document.getElementById('statusProgress').textContent = progressCount;
            document.getElementById('statusBooked').textContent = bookedCount;
            document.getElementById('statusDone').textContent = doneCount;
        }

        // Render specialist table
        function renderSpecialistTable(records) {
            const container = document.getElementById('specialistTable');
            const loading = document.getElementById('specialistLoading');

            if (records.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">ğŸ“‹</div>
                        <p class="empty-state-text">ëª…ì˜ì˜ˆì•½ ì´ìš© ë‚´ì—­ì´ ì—†ìŠµë‹ˆë‹¤.</p>
                    </div>
                `;
            } else {
                // Sort by date descending
                records.sort((a, b) => new Date(b.fields.SubmittedAt) - new Date(a.fields.SubmittedAt));

                let tableHtml = `
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ì‹ ì²­ì¼</th>
                                <th>í™˜ìëª…</th>
                                <th>ê´€ê³„</th>
                                <th>ì§ˆí™˜ëª…</th>
                                <th>ìƒíƒœ</th>
                                <th>ì˜ˆì•½ë³‘ì›</th>
                                <th>ì˜ˆì•½ì¼ì‹œ</th>
                            </tr>
                        </thead>
                        <tbody>
                `;

                records.forEach(record => {
                    const f = record.fields;
                    tableHtml += `
                        <tr>
                            <td>${formatDate(f.SubmittedAt)}</td>
                            <td>${f.Patient || '-'}</td>
                            <td>${f.MemberPatientRelation || '-'}</td>
                            <td>${f.DiseaseName || '-'}</td>
                            <td>${renderStatusBadge(f.Status)}</td>
                            <td>${f.Hospital1 || '-'}</td>
                            <td>${formatDateTime(f.Appoinment1)}</td>
                        </tr>
                    `;
                });

                tableHtml += '</tbody></table>';
                container.innerHTML = tableHtml;
            }

            loading.style.display = 'none';
            container.style.display = 'block';
        }

        // Render checkup table
        function renderCheckupTable(records) {
            const container = document.getElementById('checkupTable');
            const loading = document.getElementById('checkupLoading');

            if (records.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">ğŸ“‹</div>
                        <p class="empty-state-text">ê±´ê°•ê²€ì§„ ì´ìš© ë‚´ì—­ì´ ì—†ìŠµë‹ˆë‹¤.</p>
                    </div>
                `;
            } else {
                // Sort by date descending
                records.sort((a, b) => new Date(b.fields.SubmittedAt) - new Date(a.fields.SubmittedAt));

                let tableHtml = `
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ì‹ ì²­ì¼</th>
                                <th>ìˆ˜ê²€ìëª…</th>
                                <th>ê´€ê³„</th>
                                <th>ê²€ì§„ì„¼í„°</th>
                                <th>í”„ë¡œê·¸ë¨</th>
                                <th>ê²€ì§„ì¼</th>
                                <th>ìƒíƒœ</th>
                                <th>ê°œì¸ë¶€ë‹´ê¸ˆ</th>
                                <th>ì ˆê°ì•¡</th>
                            </tr>
                        </thead>
                        <tbody>
                `;

                records.forEach(record => {
                    const f = record.fields;
                    tableHtml += `
                        <tr>
                            <td>${formatDate(f.SubmittedAt)}</td>
                            <td>${f.Patient || '-'}</td>
                            <td>${f.MemberPatientRelation || '-'}</td>
                            <td>${f.Hospital || '-'}</td>
                            <td>${f.Program || '-'}</td>
                            <td>${formatDate(f.CheckupDate)}</td>
                            <td>${renderStatusBadge(f.Status)}</td>
                            <td>${formatNumber(f.PersonalNetPrice)}ì›</td>
                            <td>${formatNumber(f.Savings)}ì›</td>
                        </tr>
                    `;
                });

                tableHtml += '</tbody></table>';
                container.innerHTML = tableHtml;
            }

            loading.style.display = 'none';
            container.style.display = 'block';
        }

        // Tab switcher
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.toggle('active', tab.dataset.tab === tabName);
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.toggle('active', content.id === tabName + 'Tab');
            });
        }

        // Helper functions
        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return `${date.getFullYear()}.${String(date.getMonth() + 1).padStart(2, '0')}.${String(date.getDate()).padStart(2, '0')}`;
        }

        function formatDateTime(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return `${date.getFullYear()}.${String(date.getMonth() + 1).padStart(2, '0')}.${String(date.getDate()).padStart(2, '0')} ${String(date.getHours()).padStart(2, '0')}:${String(date.getMinutes()).padStart(2, '0')}`;
        }

        function formatNumber(num) {
            if (num === null || num === undefined) return '-';
            return new Intl.NumberFormat('ko-KR').format(num);
        }

        function renderStatusBadge(status) {
            if (!status) return '-';
            
            let className = '';
            if (status === 'ì§„í–‰ì¤‘') className = 'progress';
            else if (status === 'ì˜ˆì•½ì™„ë£Œ') className = 'booked';
            else className = 'done';

            return `<span class="status-badge ${className}">${status}</span>`;
        }

        // Check for existing session on load
        window.addEventListener('DOMContentLoaded', () => {
            const savedOrg = sessionStorage.getItem('orgData');
            if (savedOrg) {
                currentOrg = JSON.parse(savedOrg);
                showDashboard();
            }

            // Enter key for login
            document.getElementById('accessCode').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') handleLogin();
            });
        });
    </script>
</body>
</html>
